<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c07_bar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home"
                style="@style/mainActivityBottomBarItem"
                android:drawableTop="@drawable/ic_home_0_24"
                android:onClick="navigateToHome"
                android:text="首页" />

            <TextView
                android:id="@+id/race"
                style="@style/mainActivityBottomBarItem"
                android:drawableTop="@drawable/ic_game_0_24"
                android:onClick="navigateToRace"
                android:text="赛事" />

            <TextView
                android:id="@+id/shop"
                style="@style/mainActivityBottomBarItem"
                android:drawableTop="@drawable/ic_store_0_24"
                android:onClick="navigateToShop"
                android:text="商城" />

            <TextView
                android:id="@+id/me"
                style="@style/mainActivityBottomBarItem"
                android:drawableTop="@drawable/ic_me_0_24"
                android:onClick="navigateToMe"
                android:text="我的" />

        </LinearLayout>

    </LinearLayout>

</layout>